    <!-- webpage New Password-->
    <template id="new_password">
            <head>
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
             <!--===============================================================================================-->	
                <link rel="icon" type="image/png" href="/vista_backend_theme/static/login/images/icons/favicon.ico"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/bootstrap/css/bootstrap.min.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/fonts/iconic/css/material-design-iconic-font.min.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/animate/animate.css"/>
            <!--===============================================================================================-->	
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/css-hamburgers/hamburgers.min.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/animsition/css/animsition.min.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/select2/select2.min.css"/>
            <!--===============================================================================================-->	
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/vendor/daterangepicker/daterangepicker.css"/>
            <!--===============================================================================================-->
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/css/util.css"/>
                <link rel="stylesheet" type="text/css" href="/vista_backend_theme/static/login/css/main.css"/>
            <!--===============================================================================================-->
            </head>
            <body>	
                <div class="limiter">
                    <div class="container-login100" style="background-image: url('/solvera_create_db/static/images/bg-01.png');">
                        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-55" style="width:450px">
                            <form class="login100-form validate-form" action="/web/set_newpassword">
                                <span class="login100-form-title p-b-49">
                                    New Password
                                </span>


                                <div class="wrap-input100 validate-input m-b-23" data-validate = "Full Name">
                                    <span class="label-input100">Full Name</span>
                                    <input class="input100" type="text" id='name' name="name" placeholder="Full Name" t-att-value="name" readonly="1" required="1" style="height: 35px;"/>
                                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                                </div>

                                <div class="wrap-input100 validate-input m-b-23" data-validate = "New Password">
                                    <span class="label-input100">New Password</span>
                                    <input class="input100" type="password" id='pw' name="pw" placeholder="New Password" required="1" style="height: 35px;"/>
                                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                                </div>
                                <input type="hidden"  name="login" id="login"  t-att-value="email" />
                                <input type="hidden"  name="username" id="username" t-att-value="username" />
                                <input type="hidden"  name="packet" id="packet" t-att-value="packket" />
                                <input type="hidden"  name="token" id="token" t-att-value="token" />
                              
                            
                                <div class="container-login100-form-btn">
                                    <div class="wrap-login100-form-btn">
                                        <div class="login100-form-bgbtn"></div>
                                        <button class="login100-form-btn">
                                            Sumbit
                                        </button>
                                        
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>


                <div id="dropDownSelect1"></div>
                
           <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/jquery/jquery-3.2.1.min.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/animsition/js/animsition.min.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/bootstrap/js/popper.js"></script>
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/bootstrap/js/bootstrap.min.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/select2/select2.min.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/daterangepicker/moment.min.js"></script>
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/daterangepicker/daterangepicker.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/vendor/countdowntime/countdowntime.js"></script>
            <!--===============================================================================================-->
                <script type="text/javascript" src="/vista_backend_theme/static/login/js/main.js"></script>
            </body>

    </template>


